<?xml version='1.0' encoding='utf-8'?>
<widget id="com.refinedwebsolutions.caffeinescramble" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Caffeine Scramble</name>
    <description>A web dev survival game - catch coffee beans, avoid bugs! Survive the chaos of production fires and merge conflicts in this fast-paced arcade game.</description>
    <author email="contact@refinedwebsolutions.com" href="https://refinedwebsolutions.com">
        Refined Web Solutions
    </author>
    <content src="index.html" />
    
    <!-- App Preferences -->
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="KeepRunning" value="true" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="ShowSplashScreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    
    <!-- Android specific -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="false" />
        
        <!-- No permissions needed - offline game -->
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.VIBRATE" />
        </config-file>
    </platform>
    
    <!-- Allow navigation -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
